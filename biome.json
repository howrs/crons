{
  "$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noUnusedTemplateLiteral": "off",
        "useImportType": {
          "level": "error",
          "fix": "unsafe"
        },
        "noParameterAssign": "warn",
        "noUselessElse": "off",
        "noNonNullAssertion": "warn",
        "useConst": "off",
        "useNumberNamespace": "off",
        "useSelfClosingElements": "off",
        "noArguments": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "nursery": {
        "useSortedClasses": {
          "level": "warn",
          "fix": "safe",
          "options": {
            "attributes": ["classList"],
            "functions": ["clsx", "cva", "tw"]
          }
        }
      },
      "suspicious": {
        "noExplicitAny": "warn",
        "noAsyncPromiseExecutor": "off"
      },
      "complexity": {
        "noBannedTypes": "warn"
      }
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "enabled": true,
    "lineWidth": 80,
    "ignore": ["node_modules", ".next"]
  },
  "javascript": {
    "formatter": {
      "arrowParentheses": "always",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "all",
      "quoteProperties": "asNeeded",
      "bracketSpacing": true,
      "bracketSameLine": false
    }
  }
}
